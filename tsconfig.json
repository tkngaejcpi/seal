{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,

    "module": "ESNext",
    "moduleResolution": "Bundler",

    "outDir": "lib",
    "rootDir": "src",

    "declaration": true,

    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    }
  },

  "tsc-alias": {
    "resolveFullPaths": true
  },

  "include": ["src/*.ts"],
  "exclude": ["node_modules"]
}
